@model List<ProductCardViewModel>
@{
    ViewData["Title"] = "Index";
}

@await Component.InvokeAsync("BannerOne")
@await Component.InvokeAsync("BannerTwo")
@await Component.InvokeAsync("BannerThree")

<!-- start of box => specials-product-slider -->
<div class="ui-box ui-box-specials pb-3 mb-5" style="background-color: #f03426;">
    <div class="container">
        <div class="ui-box-title text-white fw-bolder d-sm-none">قبل از اتمام جشنواره خرید کن!</div>
        <div class="ui-box-content">
            <div class="row">
                <div class="col-lg-3 d-lg-block d-none">
                    <div class="specials-container">
                        <img src="/Template/theme-assets/images/theme/specials.png" class="img-fluid" alt="">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-sm btn-outline-light">
                            مشاهده همه <i class="ri-arrow-left-fill ms-2"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-9">
                    <!-- Slider main container -->
                    <div class="swiper product-specials-swiper-slider mb-3 pb-5">
                        <!-- Additional required wrapper -->
                        <div class="swiper-wrapper">
                            <!-- Slides -->
                            <div class="swiper-slide d-lg-none d-sm-block d-none">
                                <div class="specials-container">
                                    <img src="./Template/theme-assets/images/theme/specials.png"
                                         class="img-fluid mb-0" alt="">
                                    <a asp-controller="Product" asp-action="Index" class="btn btn-sm btn-outline-light">
                                        مشاهده همه <i class="ri-arrow-left-fill ms-2"></i>
                                    </a>
                                </div>
                            </div>
                            
                            @foreach (var productCard in Model)
                            {
                                <div class="swiper-slide">
                                    <div class="product-card">
                                        <div class="product-thumbnail">
                                            <a asp-controller="Product" asp-action="ProductDetail" asp-route-productId="@productCard.ProductId">
                                                <img src="@PathExtension.ProductImageOrigin@productCard.ImageName"
                                                     alt="@productCard.ProductTitle">
                                            </a>
                                        </div>
                                        <div class="product-card-body">
                                            <h2 class="product-title">
                                                <a asp-controller="Product" asp-action="ProductDetail" asp-route-productId="@productCard.ProductId">
                                                    @productCard.ProductTitle
                                                </a>
                                            </h2>
                                            <div class="product-variant">
                                                @foreach (var colorCode in productCard.ColorCodes)
                                                {
                                                    <span class="color"
                                                          style="background-color: @colorCode;"></span>
                                                }
                                                <span>+</span>
                                            </div>
                                            <div class="product-price fa-num">
                                                <span class="price-now">
                                                    @productCard.ProductPrice.ToString("#,0") <span class="currency">تومان</span>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="product-card-footer">
                                            <div class="d-flex align-items-center justify-content-between border-top mt-2 py-2">
                                                <div class="product-actions">
                                                    <ul>
                                                        <li>
                                                            <a href="#" data-bs-toggle="tooltip"
                                                               data-bs-placement="top" title=""
                                                               data-bs-original-title="افزودن به سبد خرید"
                                                               aria-label="افزودن به سبد خرید">
                                                                <i class="ri-shopping-cart-line"></i>
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a href="#" data-bs-toggle="tooltip"
                                                               data-bs-placement="top" title=""
                                                               data-bs-original-title="مشاهده سریع"
                                                               aria-label="مشاهده سریع"
                                                               data-remodal-target="quick-view-modal">
                                                                <i class="ri-search-line"></i>
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a href="#" data-bs-toggle="tooltip"
                                                               data-bs-placement="top" title=""
                                                               data-bs-original-title="افزودن به علاقمندی"
                                                               aria-label="افزودن به علاقمندی">
                                                                <i class="ri-heart-3-line"></i>
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                                <div class="product-rating fa-num">
                                                    <i class="ri-star-fill star"></i>
                                                    <strong>۴.۴</strong>
                                                    <span>(۴۳۶)</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            
                            
                        </div>
                        <!-- If we need pagination -->
                        <div class="swiper-pagination"></div>

                        <!-- If we need navigation buttons -->
                        <div class="swiper-button-prev"></div>
                        <div class="swiper-button-next"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end of box => specials-product-slider -->



